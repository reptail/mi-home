<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>MiHomeLib</PackageId>
    <PackageVersion>1.0.7</PackageVersion>
    <Authors>Sergey Brutsky</Authors>
    <Description>c# library for using xiaomi smart gateway in your scenarious</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Added support for Weather sensor (ThSensor with pressure)</PackageReleaseNotes>
    <Copyright>Copyright 2017 (c) Sergey Brutsky. All rights reserved.</Copyright>
    <PackageTags>xiaomi xiaomi-smart-home smarthome csharp netstandard13 netcore2 mihome</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>http://mi-home.tk/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/sergey-brutsky/mi-home</RepositoryUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/sergey-brutsky/mi-home/master/gateway.ico</PackageIconUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Version>1.0.7</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="newtonsoft.json" Version="11.0.2" />
  </ItemGroup>

</Project>
